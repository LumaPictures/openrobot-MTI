prefix=		@prefix@
exec_prefix=	@exec_prefix@
srcdir=		@srcdir@
builddir=	@builddir@
top_srcdir=	@top_srcdir@
top_builddir=	@top_builddir@

BINDIR=		@bindir@
LIBDIR=		@libdir@

MKDEP=		@MKDEP@
CC=		@CC@
CXX=		@CXX@
LDFLAGS=	@LDFLAGS@
CFLAGS=		@CFLAGS@
LIBTOOL=	@LIBTOOL@
INSTALL=	@INSTALL@
MKINSTALLDIRS=	/bin/sh ${top_srcdir}/mkinstalldirs

CPPFLAGS+=	-I${top_srcdir} 

UNAME := $(shell uname)
LIBS= -lMTI
ifneq ($(UNAME), Darwin)
	LIBS+= -lrt
endif

ifeq (${CC},gcc)
CFLAGS+= 	-Wall
endif

SRCS=		test.cpp

OBJS=		$(SRCS:%.cpp=%.lo)


vpath %.cpp $(srcdir)

PROG=		MTIHardTest

all: $(PROG)

$(PROG): $(OBJS)
	$(LIBTOOL) --mode=link $(CXX) $(LDFLAGS) -o $@ $(OBJS) \
	-rpath $(LIBDIR) -L../src $(LIBS)

%.lo: %.cpp
	$(LIBTOOL) --mode=compile $(CXX) -c $(CPPFLAGS) $(CFLAGS) $<

ifeq ($(findstring clean,$(MAKECMDGOALS)),)
depend DEPENDANCES: $(SRCS)
	$(MKDEP) -c$(CXX) -oDEPENDANCES -t.lo $(CPPFLAGS) $?
endif

clean:
	$(LIBTOOL) --mode=clean rm -f $(OBJS) $(PROG)

distclean: clean
	rm -f DEPENDANCES Makefile

install: $(PROG)
	$(MKINSTALLDIRS) $(DESTDIR)$(BINDIR)
	$(LIBTOOL) --mode=install $(INSTALL) $(PROG) $(DESTDIR)$(BINDIR)

include DEPENDANCES
